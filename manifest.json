{
  "manifest_version": 3,
  "name": "EasySearch (MVP)",
  "version": "0.1.0",
  "description": "Build a quick advanced Google query (filetype + term) and open results.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "EasySearch"
  },
  "background": {
    "service_worker": "scripts/background/index.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ]
}
